{
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "graphql",
    "yaml",
    "xml",
    "python",
    "reason",
    "rescript",
    "typescript",
    "typescriptreact",
    "javascript",
    "javascriptreact"
  ],
  "languageserver": {
    "rescript": {
      "enable": true,
      "module": "~/.config/nvim/plugged/vim-rescript/rescript-vscode/extension/server/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["rescript"],
      "rootPatterns": ["bsconfig.json"]
    }
  }
}
